frontend http_front
    bind *:80
    mode http
    option forwardfor
    option http-server-close
    option http-pretend-keepalive
    acl is_https_request ssl_fc,not
    redirect scheme https code 301 if !{ ssl_fc }

backend https_back
    balance roundrobin
    server server1 <HTTPS_SERVER_IP>:443 check ssl verify none

